generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Manager {
  hospitalId Int    @id @default(autoincrement())
  name       String @unique
  password   String
}

model Admin {
  adminId  Int    @id @default(autoincrement())
  name     String
  password String
}

model User {
  userId   Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}
